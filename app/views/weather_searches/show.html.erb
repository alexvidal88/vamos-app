<div class="weather-search">
  <div class="search-card search-item">
      <small> <%= @search.address %> </small>
      <small> Searched: <%= @output[:date] %> at <%= @output[:exact_time] %> hrs</small>
      <div>
        <div class="search-card ">
          <small> <%= image_tag "#{ url_retriever(@output[:api]["data"]["weather"], @output[:weather_type], @output[:time])}" %></small>
          <small> <%= weather_comment(@output[:api]["data"]["weather"], @output[:weather_type], @output[:time]) %></small>
        </div>
        <div class="search-card">
          <% @output[:keys].each do |key| %>
            <small> <%=  retriever(@output[:api]["data"]["weather"], key, @output[:weather_type], @output[:time]) %></small>
          <% end %>
        </div>
      </div>
      <%= link_to "make new search", new_weather_search_path  %>
      </div>
  </div>
</div>
