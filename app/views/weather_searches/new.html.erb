
<div class="card sign">
<%= simple_form_for @search do |f| %>
  <%= f.input :address, label: "Location" %>
  <%= f.input :weather_type, :collection => %w[ski marine], label: "Pick type of activity"  %>
  <% if f.weather_type == "ski" %>
    <%= f.association :parameters, collection: Parameter.where(activity_type: "land").pluck(:weather_parameter) %>
  <% else %>
  <%= f.association :parameters, collection: Parameter.where(activity_type: "water").pluck(:weather_parameter) %>
  <% end %>
  <div class="form-actions text-center m-auto">
    <%= f.submit "search", class: 'btn btn-primary' %>
  </div>
<% end %>
</div>



