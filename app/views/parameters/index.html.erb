<div>
<h3> Weather Parameters</h3>
<% @parameters.each do |parameter| %>
  <% if parameter.activity_type == "weather" %>
    <ul>
        <li><small> <%= parameter.weather_parameter %> </small> <small> <%= link_to "delete", parameters_path(parameter), method: :delete %></small></li>
    </ul>
  <%end %>
<% end %>
</div>

