<% if user_signed_in? %>
  <div class="banner">
    <div class="banner-content text-center">
      <h1> <strong> Welcome <%= current_user.first_name %> </strong> </h1>
       <%= link_to 'Make new search', '/weather_searches/new',:class => "btn btn-primary btn-lg" %>
       <%= link_to 'See my dashboard', '/weather_searches',:class => "btn btn-primary btn-lg" %>
       <%= link_to 'Community', '/community',:class => "btn btn-primary btn-lg" %>
    </div>
  </div>
<% else %>
  <div class="banner">
    <div class="banner-content text-center">
      <h1>VAMOS!</h1>
      <p> <span class="typed-text"></span></p>

      <%= link_to 'login', '/users/sign_in' , :class => "btn btn-primary btn-lg" %>
      <%= link_to 'sign-up', '/users/sign_up' , :class => "btn btn-primary btn-lg" %>
      <%= link_to 'Continue as a Guest', new_weather_search_path , :class => "btn btn-primary btn-lg" %>
    </div>

  </div>
<% end %>

